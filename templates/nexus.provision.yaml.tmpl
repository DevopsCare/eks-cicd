apiVersion: v1
data:
  nexus_provision.py: |-
    ${nexus_provision_py}
kind: Secret
type: Opaque
metadata:
  name: nexus-provision
  namespace: ${namespace}
    
---
apiVersion: batch/v1
kind: Job
metadata:
  name: cad3-nexus-provision
  labels:
    app: cad3-nexus-provision
  namespace: ${namespace}
spec:
  backoffLimit: 5
  template:
    metadata:
      name: "nexus-provision"
      annotations:
        sidecar.istio.io/inject: "false"
      labels:
        app: cad3-nexus-provision
    spec:
      containers:
      - env:
        - name: KUBERNETES_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: NEXUS_ADMIN_PASSWORD
          value: ${default_admin_password}
        - name: S3_BUCKET_NAME
          value: ${s3_bucket_name}
        - name: NEXUS_URL
          value: http://nexus:80
        - name: REMOTE_MAVEN_REPO_URL
          value: ${remote_maven_repo_url}
        image: "python:3-alpine"
        resources:
          limits:
            cpu: 100m
            memory: 256Mi
          requests:
            cpu: 80m
            memory: 128Mi
        name: nexus-provision
        volumeMounts:
        - name: nexus-provision
          mountPath: /scripts
        command:
        - "/bin/sh"
        - "-c"
        - "pip3 install -qqq requests && python3 /scripts/nexus_provision.py"
      serviceAccountName: default
      volumes:
      - name: nexus-provision
        secret:
          secretName: nexus-provision
      restartPolicy: Never
